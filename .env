# RouteForce Routing - Beast Mode Optimization Environment
# IMPORTANT: Do NOT commit real secrets. Rotate any keys previously exposed.

# Flask - Optimized for Performance
FLASK_ENV=development
SECRET_KEY=beast-mode-optimization-key-2025
JWT_SECRET_KEY=beast-mode-jwt-optimization-key-2025
DEBUG=False

# Database - Optimized PostgreSQL (fallback to SQLite for dev)
DATABASE_URL=postgresql://routeforce:routeforce_password@localhost:5432/routeforce_dev
# DATABASE_URL=sqlite:///routeforce_dev.db

# Cache / Rate Limiting - Redis Optimization
REDIS_URL=redis://localhost:6379/0
RATELIMIT_STORAGE_URI=redis://localhost:6379/2

# Performance Optimization Settings
NUMBA_CACHE_DIR=/tmp/numba_cache
NUMBA_DISABLE_JIT=0
OMP_NUM_THREADS=4

# Beast Mode Settings
BEAST_MODE_ENABLED=True
BEAST_MODE_OPTIMIZATION_LEVEL=maximum
PERFORMANCE_MONITORING=True
REAL_TIME_ANALYTICS=True

# WebSocket Configuration for Real-Time Dashboard
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_LOGGER=True
SOCKETIO_ENGINEIO_LOGGER=True

# Advanced Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1

# Connection Pool Optimization
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# External APIs
GOOGLE_MAPS_API_KEY=<your-google-maps-api-key>

# GitHub (for local scripts only; use GitHub Actions secrets in CI/CD)
GITHUB_OWNER=ApacheEcho
GITHUB_REPO=RouteForceRouting
# GITHUB_TOKEN is provided automatically in GitHub Actions; do not store PATs here.