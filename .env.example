# Environment variables for RouteForce Routing
# Copy to .env and set values for local development only.

# Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me

# Database
# Use Postgres locally if available; fallback to SQLite if not.
DATABASE_URL=postgresql://routeforce:password@localhost:5432/routeforce_dev
# DATABASE_URL=sqlite:///routeforce_dev.db

# Redis / Cache / Rate Limiting
REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/1
RATELIMIT_STORAGE_URI=${REDIS_URL}
RATE_LIMITS=200 per minute

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Uploads
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
REQUEST_ID_HEADER=X-Request-ID

# External APIs (optional)
GOOGLE_MAPS_API_KEY=
SENTRY_DSN=

# Local API base (used by frontend if present)
API_BASE_URL=http://localhost:5000
REACT_APP_API_BASE_URL=http://localhost:5000
