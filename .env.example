# Environment variables for RouteForce Routing
# Copy to .env and set values for local development only.

# Flask
FLASK_ENV=development
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me
DEBUG=True

# Deployment (GitHub Actions only - DO NOT set locally)
# RENDER_SERVICE_ID=srv-d21l9rngi27c73e2js7g
# RENDER_API_KEY=your-render-api-key
# RENDER_DEPLOY_HOOK=https://api.render.com/deploy/srv-d21l9rngi27c73e2js7g

# Database
DATABASE_URL=sqlite:///routeforce_dev.db

# Cache / Rate Limiting
CACHE_TYPE=flask_caching.backends.simple
RATELIMIT_STORAGE_URI=memory://

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/1

# External APIs
GOOGLE_MAPS_API_KEY=

# Uploads
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Logging
LOG_TO_STDOUT=False
LOG_LEVEL=DEBUG
