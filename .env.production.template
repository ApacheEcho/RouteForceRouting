# RouteForce Production Deployment Configuration
# Conservative settings for safe production deployment

# Environment Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security (Replace with strong, unique secrets; do NOT commit real keys)
SECRET_KEY=<your-production-secret-key>
JWT_SECRET_KEY=<your-production-jwt-secret-key>
AUTO_COMMIT_ENABLED=false

# Database Configuration (Replace with your production DB connection string)
DATABASE_URL=postgresql://<db_user>:<db_password>@<db_host>:<db_port>/<db_name>

# Redis Configuration (Optional - will fallback to in-memory cache if unset)
REDIS_URL=redis://<redis_host>:<redis_port>

# CORS Origins (Comma-separated list of allowed domains)
CORS_ORIGINS=https://app.routeforcepro.com,https://routeforcepro.netlify.app

# Optional protection for /metrics endpoints
METRICS_TOKEN=<set-a-strong-random-token>

# Performance Settings
CACHE_TYPE=redis  # accepts shorthand; maps to flask_caching.backends.redis
CACHE_REDIS_URL=redis://<redis_host>:<redis_port>  # falls back to REDIS_URL if unset
RATELIMIT_STORAGE_URI=redis://<redis_host>:<redis_port>

# Monitoring
SENTRY_DSN=<sentry-dsn>
SENTRY_ENVIRONMENT=production
SENTRY_SERVER_NAME=routeforce-api
PERFORMANCE_MONITORING=true
LOG_LEVEL=INFO

# Port / Gunicorn Configuration
# Default inside app is 8000 in production if PORT is not set.
# Set PORT explicitly to match your runtime (Render uses 5000 by default).
PORT=8000
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info
