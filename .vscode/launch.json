{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask App (Codespaces)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "DATABASE_URL": "postgresql://routeforce:password@postgres:5432/routeforce_dev",
                "REDIS_URL": "redis://redis:6379/0"
            },
            "args": ["--host=0.0.0.0", "--port=5000"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "python": "/usr/local/bin/python"
        },
        {
            "name": "Python: Debug Tests (Codespaces)", 
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--tb=short",
                "${workspaceFolder}/tests"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_ENV": "testing",
                "DATABASE_URL": "postgresql://routeforce:password@postgres:5432/routeforce_test"
            },
            "python": "/usr/local/bin/python"
        },
        {
            "name": "Python: Current File (Codespaces)",
            "type": "debugpy", 
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "/usr/local/bin/python"
        },
        {
            "name": "Docker: Attach to Python Container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspace"
                }
            ]
        }
    ]
}
