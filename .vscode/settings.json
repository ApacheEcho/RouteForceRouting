{
    // GitHub Codespaces Configuration
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    
    // ChatGPT Extension Configuration
    "chatgpt.apiKey": "",
    "chatgpt.model": "gpt-4",
    "chatgpt.temperature": 0.3,
    "chatgpt.maxTokens": 2048,
    "chatgpt.systemMessage": "You are an expert Python developer specializing in Flask applications, route optimization, and geospatial data. Help with RouteForceRouting project development.",
    "chatgpt.codeActions": true,
    "chatgpt.inlineCompletion": false,
    "chatgpt.showTokenUsage": true,
    "chatgpt.autoSave": true,
    "chatgpt.language": "en",
    "chatgpt.contextLength": 4000,
    
    // AI Integration Settings
    "ai.codeCompletion.enabled": true,
    "ai.chatMode": "enhanced",
    "ai.contextAwareness": true,
    "remote.autoForwardPorts": true,
    "remote.autoForwardPortsSource": "hybrid", 
    "remote.forwardOnOpen": true,
    "remote.restoreForwardedPorts": true,
    "workbench.colorTheme": "Default Dark+",
    
    // Terminal and Git for Codespaces
    "terminal.integrated.defaultProfile.linux": "bash",
    "git.enabled": true,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    
    // Core Settings
    "terminal.integrated.hideOnLastClosed": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "code-runner.runInTerminal": true,
    // Performance tuning for large projects
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/dist/**": true,
        "**/.next/**": true,
        "**/.cache/**": true
    },
    "files.maxMemoryForLargeFilesMB": 8192,
    "search.followSymlinks": false,
    "typescript.tsserver.maxTsServerMemory": 4096,
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.openFilesOnly": true
    ,
    // Further performance and minimalism tweaks
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/dist": true,
        "**/.next": true,
        "**/.cache": true,
        "**/.vscode": true,
        "**/.DS_Store": true,
        "**/build": true,
        "**/logs": true,
        "**/coverage": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/dist": true,
        "**/.next": true,
        "**/.cache": true,
        "**/.vscode": true,
        "**/.DS_Store": true,
        "**/build": true,
        "**/logs": true,
        "**/coverage": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true
    },
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "explorer.autoReveal": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.smoothScrolling": false,
    "editor.codeActionsOnSave": {},
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.suggestOnTriggerCharacters": false,
    "editor.parameterHints.enabled": false,
    "editor.lightbulb.enabled": "off",
    "editor.hover.enabled": false,
    "editor.linkedEditing": false,
    "editor.wordBasedSuggestions": "off",
    "editor.snippetSuggestions": "none",
    "editor.inlineSuggest.enabled": true,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "off",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.gotoLocation.multipleWriteLocations": "goto",
    // Python-specific
    "python.analysis.indexing": false,
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pyflakesEnabled": false,
    "python.linting.pydocstyleEnabled": false,
    "python.linting.prospectorEnabled": false,
    "python.linting.banditEnabled": false,
    "python.linting.pylamaEnabled": false,
    "python.linting.ruffEnabled": false,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.useLibraryCodeForTypes": false,
    "python.analysis.stubPath": "./typings",
    "python.analysis.logLevel": "Error",
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "python.analysis.inlayHints.callArgumentNames": "off",
    "python.analysis.inlayHints.pytestParameters": false,
    "python.languageServer": "Pylance",
    "python.formatting.provider": "none",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.envFile": "${workspaceFolder}/.env",
    "python.analysis.extraPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/app"
    ],
    "python.analysis.exclude": [
        "**/node_modules/**",
        "**/.git/**",
        "**/dist/**",
        "**/.next/**",
        "**/.cache/**",
        "**/.venv/**",
        "**/venv/**",
        "**/build/**",
        "**/logs/**",
        "**/coverage/**",
        "**/.pytest_cache/**",
        "**/.mypy_cache/**"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportMissingModuleSource": "none",
        "reportMissingTypeStubs": "none",
        "reportPrivateImportUsage": "none",
        "reportUnusedImport": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownMemberType": "none",
        "reportUnknownArgumentType": "none"
    },
    // JS/TS-specific
    "javascript.suggest.enabled": false,
    "typescript.suggest.enabled": false,
    "javascript.validate.enable": false,
    "typescript.validate.enable": false,
    "javascript.implicitProjectConfig.checkJs": false,
    "typescript.tsserver.experimental.enableProjectDiagnostics": false,
    // Terminal/Process
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.enableMultiLinePaste": false,
    "terminal.integrated.scrollback": 1000,
    "terminal.integrated.persistentSessionScrollback": 0,
    // Security/Trust
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.startupPrompt": "never",
    "codeQL.createQuery.qlPackLocation": "/Users/frank/RouteForceRouting",
    // Reduce editor diagnostics noise (CI still enforces linting)
    "yaml.validate": false,
    "json.validate.enable": false,
    "markdownlint.enable": false,
    "cSpell.enabled": false,
    // If flake8/pylint extensions are installed, keep them inactive in-editor
    "flake8.enabled": false,
    "pylint.enabled": false
}