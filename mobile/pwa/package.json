{
  "name": "routeforce-pwa",
  "version": "1.0.0",
  "description": "RouteForce Progressive Web App - Mobile-optimized route management",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
